{
  "version": "1.7.3",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src/",
    "sourceMap": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "noResolve": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts",
    "./jspm_packages/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./src/_app.ts",
    "./src/main.ts",
    "./src/pages/home/home.ts",
    "./src/resources/index.ts",
    "./test/e2e/src/demo.spec.ts",
    "./test/e2e/src/skeleton.po.ts",
    "./test/e2e/src/welcome.po.ts",
    "./test/unit/app.spec.ts",
    "./test/unit/child-router.spec.ts",
    "./test/unit/users.spec.ts"
  ]
}
